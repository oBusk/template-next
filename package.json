{
    "name": "@obusk/template-next",
    "version": "0.1.0",
    "private": true,
    "description": "Github Repo template for a next.js project with linting, strictness and CI setup",
    "keywords": [
        "eslint",
        "nextjs",
        "prettier",
        "template",
        "typescript",
        "vercel"
    ],
    "type": "module",
    "repository": {
        "type": "git",
        "url": "https://github.com/oBusk/template-next.git"
    },
    "author": "Oscar Busk <oscar.busk@gmail.com>",
    "license": "ISC",
    "engines": {
        "node": "24.x"
    },
    "devEngines": {
        "runtime": {
            "name": "node",
            "version": "^24.13.0",
            "onFail": "download"
        }
    },
    "packageManager": "pnpm@10.28.2",
    "simple-git-hooks": {
        "pre-commit": "pnpm run lint-staged"
    },
    "lint-staged": {
        "**/*.{ts,tsx,js,jsx}": [
            "eslint --fix"
        ],
        "**/*.{md,yml,yaml,json}": [
            "prettier --ignore-path .gitignore --ignore-path .prettierignore  --write"
        ]
    },
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "typecheck": "tsc --noEmit",
        "lint": "eslint",
        "postlint": "pnpm run prettier",
        "lint-fix": "eslint --fix .",
        "prettier": "prettier **/*.{md,yml,yaml,json} --ignore-path .gitignore --ignore-path .prettierignore --check",
        "postlint-fix": "pnpm run prettier-fix",
        "prettier-fix": "prettier **/*.{md,yml,yaml,json} --ignore-path .gitignore --ignore-path .prettierignore --write",
        "lint-staged": "lint-staged",
        "test": "jest --watch",
        "test-ci": "jest --ci"
    },
    "dependencies": {
        "class-variance-authority": "^0.7.1",
        "next": "16.1.6",
        "next-themes": "^0.4.6",
        "react": "19.2.4",
        "react-dom": "19.2.4",
        "react-icons": "^5.5.0",
        "tailwind-merge": "^2.6.1"
    },
    "devDependencies": {
        "@obusk/eslint-config-next": "16.1.0",
        "@testing-library/dom": "^10.4.1",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.2",
        "@types/jest": "^30.0.0",
        "@types/node": "^24.10.9",
        "@types/react": "19.2.10",
        "@types/react-dom": "19.2.3",
        "autoprefixer": "10.4.23",
        "babel-plugin-react-compiler": "^1.0.0",
        "eslint": "^9.39.2",
        "jest": "^30.2.0",
        "jest-environment-jsdom": "^30.2.0",
        "lint-staged": "^16.2.7",
        "postcss": "8.5.6",
        "prettier": "^3.8.1",
        "simple-git-hooks": "^2.13.1",
        "tailwindcss": "^3.4.19",
        "ts-node": "^10.9.2",
        "typescript": "~5.9.3"
    }
}
