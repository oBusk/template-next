{
    "name": "@obusk/template-next",
    "version": "0.1.0",
    "private": true,
    "description": "Github Repo template for a next.js project with linting, strictness and CI setup",
    "keywords": [
        "eslint",
        "nextjs",
        "prettier",
        "template",
        "typescript",
        "vercel"
    ],
    "type": "module",
    "repository": {
        "type": "git",
        "url": "https://github.com/oBusk/template-next.git"
    },
    "author": "Oscar Busk <oscar.busk@gmail.com>",
    "license": "ISC",
    "engines": {
        "node": "22.x"
    },
    "volta": {
        "node": "22.16.0"
    },
    "simple-git-hooks": {
        "pre-commit": "npm run lint-staged"
    },
    "lint-staged": {
        "**/*.{ts,tsx,js,jsx}": [
            "eslint --fix"
        ],
        "**/*.{md,yml,yaml,json}": [
            "prettier --write"
        ]
    },
    "scripts": {
        "dev": "next dev --turbopack",
        "build": "next build",
        "start": "next start",
        "lint": "next lint --ignore-path .gitignore",
        "postlint": "npm run prettier",
        "lint-fix": "next lint --ignore-path .gitignore --fix",
        "prettier": "prettier **/*.{md,yml,yaml,json} --ignore-path .gitignore --check",
        "postlint-fix": "npm run prettier-fix",
        "prettier-fix": "prettier **/*.{md,yml,yaml,json} --ignore-path .gitignore --write",
        "lint-staged": "lint-staged",
        "test": "jest --watch",
        "test-ci": "jest --ci"
    },
    "dependencies": {
        "class-variance-authority": "^0.7.1",
        "next": "~15.3",
        "next-themes": "^0.4.6",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "react-icons": "^5.5.0",
        "tailwind-merge": "^3.3.0"
    },
    "devDependencies": {
        "@obusk/eslint-config-next": "~15.3",
        "@testing-library/jest-dom": "^6.6",
        "@types/node": "^22",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "autoprefixer": "^10.4",
        "eslint": "^9",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "lint-staged": "^16.1",
        "postcss": "^8.5",
        "prettier": "^3.5",
        "simple-git-hooks": "^2.13",
        "tailwindcss": "^3",
        "typescript": "^5"
    }
}
